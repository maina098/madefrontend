    </footer>

    <script>
      const canvas = document.getElementById('canvas');
      const ctx = canvas.getContext('2d');
      const aSlider = document.getElementById('a');
      const bSlider = document.getElementById('b');
      const cSlider = document.getElementById('c');
      const equationDisplay = document.getElementById('equation');
      
      function resizeCanvas() {
      canvas.width = canvas.clientWidth;
      canvas.height = canvas.clientHeight;
      }
      
      function drawQuadratic() {
      resizeCanvas();
      const a = parseFloat(aSlider.value);
      const b = parseFloat(bSlider.value);
      const c = parseFloat(cSlider.value);
      
      equationDisplay.textContent = `Equation: y = ${a.toFixed(1)}x² ${b>=0?'+':''}${b.toFixed(1)}x ${c>=0?'+':''}${c.toFixed(1)}`;
      
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      ctx.fillStyle = "#111";
      ctx.fillRect(0, 0, canvas.width, canvas.height);
      
      const scaleX = canvas.width / 20;  
      const scaleY = canvas.height / 20;  
      const originX = canvas.width / 2;
      const originY = canvas.height / 2;
      
      ctx.strokeStyle = "#444";
      ctx.lineWidth = 1;
      for(let x = -canvas.width/2; x < canvas.width/2; x+=scaleX){
      ctx.beginPath();
      ctx.moveTo(originX + x, 0);
      ctx.lineTo(originX + x, canvas.height);
      ctx.stroke();
      }
      for(let y = -canvas.height/2; y < canvas.height/2; y+=scaleY){
      ctx.beginPath();
      ctx.moveTo(0, originY + y);
      ctx.lineTo(canvas.width, originY + y);
      ctx.stroke();
      }
      
      ctx.strokeStyle = "#fff";
      ctx.lineWidth = 2;
      ctx.beginPath();
      ctx.moveTo(0, originY);
      ctx.lineTo(canvas.width, originY);
      ctx.moveTo(originX, 0);
      ctx.lineTo(originX, canvas.height);
      ctx.stroke();
      
      ctx.strokeStyle = "#00ff99";
      ctx.lineWidth = 2;
      ctx.beginPath();
      let firstPoint = true;
      for(let px = -originX; px <= originX; px+=1){
      let x = px / scaleX;
      let y = a*x*x + b*x + c;
      let py = -y * scaleY;
      if(firstPoint){
      ctx.moveTo(originX + px, originY + py);
      firstPoint = false;
      } else {
      ctx.lineTo(originX + px, originY + py);
      }
      }
      ctx.stroke();
      
      const h = -b/(2*a);
      const k = a*h*h + b*h + c;
      ctx.fillStyle = "red";
      ctx.beginPath();
      ctx.arc(originX + h*scaleX, originY - k*scaleY, 5, 0, 2*Math.PI);
      ctx.fill();
      
      ctx.strokeStyle = "yellow";
      ctx.setLineDash([5,5]);
      ctx.beginPath();
      ctx.moveTo(originX + h*scaleX, 0);
      ctx.lineTo(originX + h*scaleX, canvas.height);
      ctx.stroke();
      ctx.setLineDash([]);
      
      const discriminant = b*b - 4*a*c;
      if(discriminant >= 0 && a !== 0){
      const sqrtDisc = Math.sqrt(discriminant);
      const x1 = (-b + sqrtDisc) / (2*a);
      const x2 = (-b - sqrtDisc) / (2*a);
      ctx.fillStyle = "cyan";
      ctx.beginPath();
      ctx.arc(originX + x1*scaleX, originY, 5, 0, 2*Math.PI);
      ctx.fill();
      ctx.beginPath();
      ctx.arc(originX + x2*scaleX, originY, 5, 0, 2*Math.PI);
      ctx.fill();
      }
      }
      
      aSlider.addEventListener('input', drawQuadratic);
      bSlider.addEventListener('input', drawQuadratic);
      cSlider.addEventListener('input', drawQuadratic);
      
      window.addEventListener('resize', drawQuadratic);
      
      drawQuadratic();
    </script>
