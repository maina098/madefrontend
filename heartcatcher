.btn { padding: 12px 25px; background: #ffb3c6; border-radius: 15px; border: none; cursor: pointer; font-size: 20px; transition: 0.3s; } .btn:hover { background: #ff8fb2; transform: scale(1.05); }

#game { position: relative; width: 400px; height: 600px; background: rgba(255,255,255,0.55); border-radius: 25px; overflow: hidden; backdrop-filter: blur(10px); box-shadow: 0 0 20px rgba(0,0,0,0.1); display: none; }

#basket { position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%); width: 100px; height: 45px; background: #ffb3c6; border-radius: 20px; box-shadow: 0 4px 10px rgba(0,0,0,0.2); }

.heart { position: absolute; width: 45px; height: 45px; clip-path: polygon(50% 80%, 0% 30%, 20% 0%, 50% 20%, 80% 0%, 100% 30%); animation: fall linear; }

