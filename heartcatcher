</div><audio id="bgm" loop>
  <source src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_7ba5ac6e46.mp3" type="audio/mp3">
</audio><script>
  const menu = document.getElementById("menu");
  const game = document.getElementById("game");
  const basket = document.getElementById("basket");
  const scoreDisplay = document.getElementById("score");
  const bgm = document.getElementById("bgm");

  let score = 0;
  let speed = 3000;
  let spawnRate = 1200;

  function startGame(level) {
    menu.style.display = "none";
    game.style.display = "block";
    bgm.play();

    if (level === 2) { speed = 2200; spawnRate = 900; }
    if (level === 3) { speed = 1300; spawnRate = 400; }

    setInterval(spawnHeart, spawnRate);
  }

  document.addEventListener("mousemove", moveBasket);
  document.getElementById("left").onclick = () => moveBasketBtn(-20);
  document.getElementById("right").onclick = () => moveBasketBtn(20);

  function moveBasket(e) {
    const rect = game.getBoundingClientRect();
    let x = e.clientX - rect.left;
    if (x < 45) x = 45;
    if (x > 355) x = 355;
    basket.style.left = x + "px";
  }

  function moveBasketBtn(offset) {
    let left = parseInt(basket.style.left || 200);
    left += offset;
    if (left < 45) left = 45;
    if (left > 355) left = 355;
    basket.style.left = left + "px";
  }

  function spawnHeart() {
    const heart = document.createElement("div");
    heart.classList.add("heart");

    const colors = ["#ffb3c6", "#b4f8c8", "#ffdde1", "#ffe7c7", "#c7e9ff"]; 
    heart.style.background = colors[Math.floor(Math.random()*colors.length)];
    heart.style.left = Math.random() * 360 + "px";
    heart.style.animationDuration = speed + "ms";

    game.appendChild(heart);

    let fallCheck = setInterval(() => {
      const h = heart.getBoundingClientRect();
      const b = basket.getBoundingClientRect();

      if (h.bottom >= b.top && h.left >= b.left && h.right <= b.right) {
        score++;
        scoreDisplay.textContent = "Score: " + score;
        heart.classList.add("pop");
        setTimeout(() => heart.remove(), 300);
        clearInterval(fallCheck);
      }

      if (h.top > window.innerHeight) {
        heart.remove();
        clearInterval(fallCheck);
      }
    }, 20);
  }
</script></body>
</html>