  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      background: linear-gradient(135deg, #a0c0ff, #ff9f9f);
      font-family: 'Arial', sans-serif;
      margin: 0;
      overflow: hidden;
      animation: gradient 10s ease infinite;
      color: #fff;
    }

    @keyframes gradient {
      0% { background: linear-gradient(135deg, #a0c0ff, #ff9f9f); }
      33% { background: linear-gradient(135deg, #ff9f9f, #ffd700); }
      66% { background: linear-gradient(135deg, #ffd700, #a0c0ff); }
      100% { background: linear-gradient(135deg, #a0c0ff, #ff9f9f); }
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 20px;
    }

    .wish-container {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
      margin-top: 20px;
      width: 100%;
      max-width: 600px;
    }

    .wish-box {
      width: 100%;
      height: 150px;
      background-color: #6200ea;
      color: white;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      cursor: pointer;
      transition: transform 0.3s ease, background-color 0.3s ease;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .wish-box:hover {
      background-color: #3700b3;
      transform: scale(1.1);
    }

    .disabled {
      background-color: rgba(255, 165, 0, 0.7);
      cursor: not-allowed;
    }

    .message {
      margin-top: 20px;
      font-size: 1.5rem;
      opacity: 0;
      transition: opacity 0.5s ease;
    }

    .visible {
      opacity: 1;
    }

    #buttonContainer {
      margin-top: 20px;
      display: flex;
      gap: 10px;
    }

    #review {
      display: none;
      margin-top: 20px;
