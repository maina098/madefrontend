<style>
  body {
    font-family: Arial, sans-serif;
    background: #121212;
    color: #eee;
    text-align: center;
    padding: 2rem;
  }
  input, button {
    font-size: 1.2rem;
    padding: 0.5rem 1rem;
    margin: 1rem 0.5rem 2rem;
    border-radius: 8px;
    border: none;
  }
  input {
    width: 70%;
  }
  button {
    cursor: pointer;
    background: #4caf50;
    color: #fff;
  }
  #result {
    font-size: 2rem;
    margin-top: 1rem;
  }
  .truth {
    color: #4caf50;
  }
  .lie {
    color: #f44336;
  }
</style>
