<body>
  <h1>Simple Lie Detector</h1>
  <input id="statement" placeholder="Type your statement here..." />
  <button onclick="detectLie()">Detect Lie</button>
  <div id="result"></div>

  <script>
    function detectLie() {
      const input = document.getElementById('statement').value.trim();
      const resultDiv = document.getElementById('result');
      if (!input) {
        resultDiv.textContent = 'Please enter a statement.';
        resultDiv.className = '';
        return;
      }

      // Simple random "Truth" or "Lie"
      const verdict = Math.random() < 0.5 ? 'Truth' : 'Lie';

      // Show verdict with color
      resultDiv.textContent = verdict;
      resultDiv.className = verdict.toLowerCase();
    }
  </script>
</body>
</html>
