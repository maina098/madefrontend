<body>

<div class="card">
    <h2>NICKNAME GEN</h2>
    <input type="text" id="realName" class="input-box" placeholder="Enter Real Name...">
    
    <select id="vibe">
        <option value="cool">Cool / Alpha</option>
        <option value="funny">Funny / Weird</option>
        <option value="gaming">Pro Gamer</option>
        <option value="cute">Soft / Cute</option>
    </select>

    <button onclick="generateNickname()">Craft Nickname</button>

    <div id="result-display">
        <span style="font-size: 0.8rem; color: #aaa;">YOUR NEW IDENTITY IS</span>
        <span class="nickname" id="nickname-output"></span>
    </div>
</div>

<script>
    const data = {
        cool: {
            prefix: ["Shadow", "Iron", "Ghost", "Neo", "Zenith", "Storm"],
            suffix: ["Viper", "Blade", "X", "Nova", "Reaper", "Prime"]
        },
        funny: {
            prefix: ["Captain", "Professor", "Sir", "Dancing", "Sticky", "Lazy"],
            suffix: ["Potato", "Noodle", "Waffle", "Muffin", "Pickle", "Feet"]
        },
        gaming: {
            prefix: ["Elite", "Godly", "Laggy", "Toxic", "Hidden", "Sniper"],
            suffix: ["GG", "MVP", "Carry", "Bot", "Aim", "Slayer"]
        },
        cute: {
            prefix: ["Tiny", "Lil", "Sugar", "Honey", "Bubbly", "Soft"],
            suffix: ["Bear", "Cloud", "Bee", "Peach", "Button", "Sparkle"]
        }
    };

    function generateNickname() {
        const name = document.getElementById('realName').value.trim();
        const vibe = document.getElementById('vibe').value;
        
        if (!name) {
            alert("Enter a name first, you ghost!");
            return;
        }

        const category = data[vibe];
        const randomPre = category.prefix[Math.floor(Math.random() * category.prefix.length)];
        const randomSuf = category.suffix[Math.floor(Math.random() * category.suffix.length)];
        
        // Pick a random style: Prefix + Name, Name + Suffix, or Prefix + Suffix
        const styles = [
            `${randomPre} ${name}`,
            `${name} ${randomSuf}`,
            `${randomPre}_${name.slice(0,3)}_${randomSuf}`
        ];

        const finalName = styles[Math.floor(Math.random() * styles.length)];

        document.getElementById('nickname-output').innerText = finalName;
        document.getElementById('result-display').style.display = 'block';
    }
</script>

</body>
