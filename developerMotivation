    const textBox = document.getElementById('text');
    const character = document.getElementById('character');
    const nextBtn = document.getElementById('nextBtn');
    const endMessage = document.getElementById('end');
    const bgMusic = document.getElementById('bgMusic');
    const bg = document.getElementById('bg');
    const body = document.body;

    let index = 0;
    let autoPlayInterval = null;
    const intervalTime = 7000; // 7 seconds

    // Create floating circles, keep references for color change
    const circles = [];
    for (let i = 0; i < 30; i++) {
      const circle = document.createElement('div');
      circle.classList.add('circle');
      circle.style.left = `${Math.random() * 100}%`;
      circle.style.width = circle.style.height = `${30 + Math.random() * 100}px`;
      circle.style.animationDuration = `${8 + Math.random() * 7}s`;
      circle.style.animationDelay = `${-Math.random() * 10}s`;
      bg.appendChild(circle);
      circles.push(circle);
    }

    function updateBackgroundAndCircles(bgGradient, circleColor) {
      // Animate body background gradient change (CSS transition handles smooth)
      body.style.background = bgGradient;

      // Update all circles color
      circles.forEach(c => {
        c.style.background = circleColor;
      });
    }

    function showMessage(i) {
      if (i >= data.length) {
        // End of quotes
        textBox.classList.remove('show');
        character.classList.remove('show');
        nextBtn.disabled = true;
        clearInterval(autoPlayInterval);
        setTimeout(() => {
          endMessage.classList.add('show');
          bgMusic.volume = 0.1;
        }, 800);
        return;
      }

      // Change background and circles
      updateBackgroundAndCircles(data[i].bg, data[i].circleColor);

      // Hide first
      textBox.classList.remove('show');
      character.classList.remove('show');

      // Wait transition before updating content
      setTimeout(() => {
        textBox.textContent = data[i].text;
        character.src = data[i].img;
        character.alt = `Character for quote: "${data[i].text}"`;

        // Show with animations
        textBox.classList.add('show');
        character.classList.add('show');
      }, 600);
    }

    // Next button click: show next and reset autoplay timer
    nextBtn.addEventListener('click', () => {
      showMessage(index);
      index++;
      resetAutoPlay();
    });

    // Auto-play setup
    function startAutoPlay() {
      autoPlayInterval = setInterval(() => {
        if (index >= data.length) {
          clearInterval(autoPlayInterval);
          return;
        }
        showMessage(index);
        index++;
      }, intervalTime);
    }

    function resetAutoPlay() {
      clearInterval(autoPlayInterval);
      startAutoPlay();
    }

    // Initialize first message
    showMessage(index);
    index++;
    startAutoPlay();

    // Optional: control music volume via keyboard (M to mute/unmute)
    document.addEventListener('keydown', e => {
      if (e.key.toLowerCase() === 'm') {
        if(bgMusic.paused){
          bgMusic.play();
        } else {
          bgMusic.pause();
        }
      }
    });
  </script>

