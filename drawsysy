<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <style>
        :root { --primary: #3b82f6; --bg: #0f172a; --panel: #1e293b; }
        * { box-sizing: border-box; touch-action: none; }
        
        body { 
            background: var(--bg); 
            margin: 0; 
            padding: 0;
            display: flex; 
            flex-direction: column;
            height: 100vh;
            width: 100vw;
            font-family: 'Inter', sans-serif;
            overflow: hidden;
        }

        /* Responsive Toolbar */
        .toolbar { 
            background: var(--panel);
            padding: 10px 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            z-index: 10;
        }

        .tool-group { display: flex; align-items: center; gap: 8px; color: #94a3b8; font-size: 12px; font-weight: 600; }

        canvas { 
            flex-grow: 1;
            background: #ffffff;
            width: 100%;
            height: 100%;
            cursor: crosshair;
        }

        input[type="color"] { 
            -webkit-appearance: none; border: none; width: 35px; height: 35px; 
            border-radius: 50%; cursor: pointer; background: none; 
        }

        button { 
            padding: 8px 16px; border-radius: 8px; border: none; 
            font-weight: 600; cursor: pointer; transition: transform 0.1s;
        }

        .btn-save { background: var(--primary); color: white; }
        .btn-clear { background: #ef4444; color: white; }
        button:active { transform: scale(0.95); }

        @media (max-width: 600px) {
            .toolbar { gap: 10px; padding: 5px; }
            .tool-group span { display: none; } /* Hide labels on small screens */
        }
    </style>
</head>
<body>

    <div class="toolbar">
        <div class="tool-group">
            <span>COLOR</span>
            <input type="color" id="colorPicker" value="#3b82f6">
        </div>
        <div class="tool-group">
            <span>SIZE</span>
            <input type="range" id="sizePicker" min="1" max="40" value="5">
        </div>
        <button class="btn-save" onclick="saveCanvas()">SAVE</button>
        <button class="btn-clear" onclick="clearCanvas()">CLEAR</button>
    </div>

    <canvas id="sketchpad"></canvas>

    <script>
        const canvas = document.getElementById('sketchpad');
        const ctx = canvas.getContext('2d');
        const colorPicker = document.getElementById('colorPicker');
        const sizePicker = document.getElementById('sizePicker');

        function resize() {
            // Save the current drawing before resizing
            const tempImg = ctx.getImageData(0, 0, canvas.width, canvas.height);
            canvas.width = window.innerWidth;
            canvas.height = canvas.offsetHeight; // Fill remaining space
            ctx.lineCap = 'round';
            ctx.lineJoin = 'round';
            // Restore drawing
            ctx.putImageData(tempImg, 0, 0);
        }

        window.addEventListener('resize', resize);
        resize();

        let drawing = false;

        function getXY(e) {
            const rect = canvas.getBoundingClientRect();
            const clientX = e.touches ? e.touches[0].clientX : e.clientX;
            const clientY = e.touches ? e.touches[0].clientY : e.clientY;
            return {
                x: clientX - rect.left,
                y: clientY - rect.top
            };
        }

        function start(e) {
            drawing = true;
            const pos = getXY(e);
            ctx.beginPath();
            ctx.moveTo(pos.x, pos.y);
            e.preventDefault();
        }

        function draw(e) {
            if (!drawing) return;
            const pos = getXY(e);
            ctx.strokeStyle = colorPicker.value;
            ctx.lineWidth = sizePicker.value;
            ctx.lineTo(pos.x, pos.y);
            ctx.stroke();
            e.preventDefault();
        }

        function stop() { drawing = false; }

        canvas.addEventListener('mousedown', start);
        canvas.addEventListener('mousemove', draw);
        window.addEventListener('mouseup', stop);
        
        canvas.addEventListener('touchstart', start, {passive: false});
        canvas.addEventListener('touchmove', draw, {passive: false});
        canvas.addEventListener('touchend', stop);

        function clearCanvas() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
        }

        function saveCanvas() {
            const link = document.createElement('a');
            link.download = 'sketch.png';
            link.href = canvas.toDataURL();
            link.click();
        }
    </script>
</body>
</html>
