<script>
function openApp(id){
    document.querySelectorAll('.view').forEach(v=>v.classList.remove('active'));
    document.getElementById(id).classList.add('active');
}
function goHome(){openApp('home');}

/* CLOCK */
setInterval(()=>{
    let d=new Date();
    time.innerText=d.getHours().toString().padStart(2,"0")+":"+
                   d.getMinutes().toString().padStart(2,"0");
},1000);

/* PHONE */
let number="";
let calling=false;
function press(n){
    if(calling)return;
    number+=n;
    dialNum.innerText=number.replace(/(\d{3})(\d{3})(\d+)/,"$1 $2 $3");
}
function startCall(){
    if(!number)return;
    calling=true;
    dialNum.innerText="Calling‚Ä¶";
}
function endCall(){
    calling=false;
    number="";
    dialNum.innerText="";
}

/* NOTES */
let notes=[];
function newNote(){
    notes.unshift("New note");
    renderNotes();
    editNote(0);
}
function renderNotes(){
    notesList.innerHTML="";
    notes.forEach((n,i)=>{
        let title=n.split("\n")[0];
        notesList.innerHTML+=`
        <div class="note" onclick="editNote(${i})">
            <b>${title||"Note"}</b><br>
            <small>${n.slice(0,50)}</small>
        </div>`;
    });
}
function editNote(i){
    openApp('noteEdit');
    noteText.value=notes[i];
    noteText.focus();
    noteText.oninput=()=>notes[i]=noteText.value;
}

/* MESSAGES */
let contacts=[
    {name:"John", replies:["Alright","Got it","üëç"]},
    {name:"Aisha", replies:["In shƒÅ‚Äô AllƒÅh","Yes","Noted"]},
    {name:"Mom", replies:["Call me","Okay ‚ù§Ô∏è"]}
];
let chats={}, current=null;
contacts.forEach(c=>chats[c.name]=[]);

function renderChats(){
    chatList.innerHTML="";
    contacts.forEach(c=>{
        let last=chats[c.name].slice(-1)[0]?.text||"No messages";
        chatList.innerHTML+=`
        <div class="item" onclick="openChat('${c.name}')">
            <b>${c.name}</b>
            <span>${last}</span>
        </div>`;
    });
}
function openChat(name){
    current=contacts.find(c=>c.name===name);
    chatName.innerText=name;
    openApp('chatView');
    renderChat();
}
function renderChat(){
    chat.innerHTML="";
    chats[current.name].forEach(m=>{
        chat.innerHTML+=`<div class="bubble ${m.type}">${m.text}</div>`;
    });
    chat.scrollTop=chat.scrollHeight;
}
function sendMsg(){
    if(!msgText.value)return;
    chats[current.name].push({type:"sent",text:msgText.value});
    msgText.value="";
    renderChat();
    setTimeout(()=>{
        let r=current.replies[Math.floor(Math.random()*current.replies.length)];
        chats[current.name].push({type:"recv",text:r});
        renderChat();
        renderChats();
    },1000);
}
renderChats();
</script>
