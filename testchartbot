  <h1>Nivek.AI Jr (Beta)</h1>

  <div id="chatbox"></div>

  <div id="input-area">
    <input type="text" id="userInput" placeholder="Type a message..." />
    <button onclick="sendMessage()">Send</button>
  </div>

  <script>
    const chatbox = document.getElementById("chatbox");

    function addMessage(text, sender) {
      const messageDiv = document.createElement("div");
      messageDiv.classList.add("message", sender);
      messageDiv.textContent = text;
      chatbox.appendChild(messageDiv);
      chatbox.scrollTop = chatbox.scrollHeight;
    }

    function sendMessage() {
      const userInput = document.getElementById("userInput");
      const message = userInput.value.trim();
      if (message === "") return;

      addMessage(message, "user");
      userInput.value = "";

      // Simple responses
      setTimeout(() => {
        let reply;
        if (message.toLowerCase().includes("hi")) {
          reply = "Hey there ðŸ‘‹! I'm Nivek.AI Jr â€” Beta version!";
        } else if (message.toLowerCase().includes("who made you")) {
          reply = "I was made by Nivekverse âš¡, the creative chaos realm.";
        } else if (message.toLowerCase().includes("how are you")) {
          reply = "Feeling charged up and ready to vibe ðŸ˜Ž!";
        } else {
          reply = "Haha Iâ€™m still learning! (Beta mode ðŸ¤–)";
        }
        addMessage(reply, "bot");
      }, 700);
    }
  </script>
