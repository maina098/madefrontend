    <!-- Audio Element -->
    <audio id="birthdayMusic" loop>
        <source src="https://www.dropbox.com/scl/fi/gcy9j1ch7b5uxom1mnwnw/Who-jimin.m4a?rlkey=1gfu07kn3p6dactwq7f0y113v&st=jf2ff3l0&dl=1" type="audio/mpeg">
    </audio>

    <script>
        // Music Toggle
        const musicToggle = document.getElementById('musicToggle');
        const musicIcon = document.getElementById('musicIcon');
        const birthdayMusic = document.getElementById('birthdayMusic');
        let musicPlaying = false;
        
        musicToggle.addEventListener('click', function() {
            if (musicPlaying) {
                birthdayMusic.pause();
                musicIcon.textContent = '🎵';
            } else {
                birthdayMusic.play().catch(e => {
                    console.log("Audio play failed:", e);
                    alert("Background music requires user interaction first. Click anywhere on the page to enable music.");
                });
                musicIcon.textContent = '🔊';
            }
            musicPlaying = !musicPlaying;
        });
        
        // Enable audio on first user interaction
        document.addEventListener('click', function() {
            if (birthdayMusic.paused) {
                birthdayMusic.play().then(() => {
                    birthdayMusic.pause();
                    musicPlaying = false;
                    musicIcon.textContent = '🎵';
                }).catch(e => {
                    console.log("Audio initialization failed:", e);
                });
            }
        }, { once: true });
        
        // Blow out tiny candles
        function blowCandles() {
            const candles = document.querySelectorAll('.candle');
            candles.forEach(candle => {
                candle.style.animation = 'none';
                candle.style.opacity = '0';
            });
            
            // Create fireworks when candles are blown
            createFireworks();
        }
        
        // Create gentle fireworks
        function createFireworks() {
            const fireworksContainer = document.getElementById('fireworks');
            for (let i = 0; i < 50; i++) {
                const firework = document.createElement('div');
                firework.className = 'firework';
                firework.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 50%)`;
                firework.style.setProperty('--x', Math.random() * 100 - 50 + 'vw');
                firework.style.setProperty('--y', Math.random() * 100 - 50 + 'vh');
                firework.style.animationDelay = Math.random() * 1 + 's';
                fireworksContainer.appendChild(firework);
                
                // Remove firework after animation
                setTimeout(() => {
                    firework.remove();
                }, 1500);
            }
        }
        
        // Create additional floating elements
        function createFloatingElements() {
            const welcomeSection = document.querySelector('.welcome-section');
            
            for (let i = 0; i < 15; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 5 + 's';
                welcomeSection.appendChild(star);
            }
        }
        
        // Initialize the page
        createFloatingElements();
    </script>
</body>
