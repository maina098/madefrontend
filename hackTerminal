<body>

  <div id="terminal">Initializing Quantum HackOS v3.1...\n</div><span class="cursor"></span>

  <script>
    const terminal = document.getElementById("terminal");

    const commands = [
      "Establishing secure connection...",
      "Bypassing firewall...",
      "Accessing internal network...",
      "Decrypting data packets...",
      "Injecting payload...",
      "Downloading secret files...",
      "Upload complete. Covering tracks...",
      "Exiting system...\n",
      "Hack successful. Session terminated."
    ];

    let i = 0;
    let char = 0;

    function typeCommand() {
      if (i < commands.length) {
        if (char < commands[i].length) {
          terminal.textContent += commands[i][char];
          char++;
          setTimeout(typeCommand, 40);
        } else {
          terminal.textContent += '\n';
          i++;
          char = 0;
          setTimeout(typeCommand, 500);
        }
      }
    }

    setTimeout(typeCommand, 1000); // Start typing after 1s
  </script>

</body>
