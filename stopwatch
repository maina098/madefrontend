<body>
    <div class="stopwatch-container">
        <div class="time-display" id="timeDisplay">00:00:00.000</div>
        
        <div class="controls">
            <button class="btn btn-start" id="startBtn">Start</button>
            <button class="btn btn-pause" id="pauseBtn" disabled>Pause</button>
            <button class="btn btn-reset" id="resetBtn" disabled>Reset</button>
            <button class="btn btn-lap" id="lapBtn" disabled>Lap</button>
        </div>
        
        <div class="laps-section">
            <h3>Lap Times</h3>
            <ul class="lap-list" id="lapList"></ul>
        </div>
    </div>

    <script>
        class Stopwatch {
            constructor() {
                this.isRunning = false;
                this.startTime = 0;
                this.elapsedTime = 0;
                this.laps = [];
                this.animationFrame = null;
                
                // DOM elements
                this.timeDisplay = document.getElementById('timeDisplay');
                this.startBtn = document.getElementById('startBtn');
                this.pauseBtn = document.getElementById('pauseBtn');
                this.resetBtn = document.getElementById('resetBtn');
                this.lapBtn = document.getElementById('lapBtn');
                this.lapList = document.getElementById('lapList');
                
                this.bindEvents();
            }
            
            bindEvents() {
                this.startBtn.addEventListener('click', () => this.start());
                this.pauseBtn.addEventListener('click', () => this.pause());
                this.resetBtn.addEventListener('click', () => this.reset());
                this.lapBtn.addEventListener('click', () => this.recordLap());
            }
            
            start() {
                if (!this.isRunning) {
                    this.isRunning = true;
                    this.startTime = performance.now() - this.elapsedTime;
                    
                    this.startBtn.disabled = true;
                    this.pauseBtn.disabled = false;
                    this.resetBtn.disabled = false;
                    this.lapBtn.disabled = false;
                    
                    this.update();
                }
            }
            
            pause() {
                if (this.isRunning) {
                    this.isRunning = false;
                    this.elapsedTime = performance.now() - this.startTime;
                    
                    this.startBtn.disabled = false;
                    this.pauseBtn.disabled = true;
                    this.lapBtn.disabled = true;
                    
                    this.startBtn.textContent = 'Resume';
                    
                    if (this.animationFrame) {
                        cancelAnimationFrame(this.animationFrame);
                    }
                }
            }
            
            reset() {
                this.isRunning = false;
                this.elapsedTime = 0;
                this.laps = [];
                
                this.startBtn.disabled = false;
                this.pauseBtn.disabled = true;
                this.resetBtn.disabled = true;
                this.lapBtn.disabled = true;
                
                this.startBtn.textContent = 'Start';
                this.timeDisplay.textContent = '00:00:00.000';
                this.lapList.innerHTML = '';
                
                if (this.animationFrame) {
                    cancelAnimationFrame(this.animationFrame);
                }
            }
            
            recordLap() {
                if (this.isRunning) {
                    const currentTime = performance.now() - this.startTime;
                    const lapTime = this.formatTime(currentTime);
                    const lapNumber = this.laps.length + 1;
                    
                    this.laps.push({
                        number: lapNumber,
                        time: currentTime,
                        formatted: lapTime
                    });
                    
                    this.updateLapDisplay();
                }
            }
            
            update() {
                if (this.isRunning) {
                    this.elapsedTime = performance.now() - this.startTime;
                    this.timeDisplay.textContent = this.formatTime(this.elapsedTime);
                    
                    this.animationFrame = requestAnimationFrame(() => this.update());
                }
            }
            
            formatTime(milliseconds) {
                const totalSeconds = milliseconds / 1000;
                const hours = Math.floor(totalSeconds / 3600);
                const minutes = Math.floor((totalSeconds % 3600) / 60);
                const seconds = Math.floor(totalSeconds % 60);
                const ms = Math.floor((milliseconds % 1000));
                
                return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}.${ms.toString().padStart(3, '0')}`;
            }
            
            updateLapDisplay() {
                this.lapList.innerHTML = '';
                
                if (this.laps.length === 0) return;
                
                // Find fastest and slowest laps
                const lapTimes = this.laps.map(lap => lap.time);
                const minTime = Math.min(...lapTimes);
                const maxTime = Math.max(...lapTimes);
                
                this.laps.forEach(lap => {
                    const li = document.createElement('li');
                    li.className = 'lap-item';
                    
                    if (lap.time === minTime && this.laps.length > 1) {
                        li.classList.add('fastest-lap');
                    } else if (lap.time === maxTime && this.laps.length > 1) {
                        li.classList.add('slowest-lap');
                    }
                    
                    li.innerHTML = `
                        <span class="lap-number">Lap ${lap.number}</span>
                        <span class="lap-time">${lap.formatted}</span>
                    `;
                    
                    this.lapList.appendChild(li);
                });
                
                // Scroll to bottom
                this.lapList.scrollTop = this.lapList.scrollHeight;
            }
        }
        
        // Initialize stopwatch when page loads
        document.addEventListener('DOMContentLoaded', () => {
            new Stopwatch();
        });
        
        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            switch(e.code) {
                case 'Space':
                    e.preventDefault();
                    const startBtn = document.getElementById('startBtn');
                    const pauseBtn = document.getElementById('pauseBtn');
                    if (!startBtn.disabled) {
                        startBtn.click();
                    } else if (!pauseBtn.disabled) {
                        pauseBtn.click();
                    }
                    break;
                case 'KeyL':
                    e.preventDefault();
                    document.getElementById('lapBtn').click();
                    break;
                case 'KeyR':
                    e.preventDefault();
                    document.getElementById('resetBtn').click();
                    break;
            }
        });
    </script>
</body>
</html>